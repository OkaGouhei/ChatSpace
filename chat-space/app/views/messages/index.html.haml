= render 'devise/shared/side_bar'
.main
  .main__header
    .main__header--group
      = @group.name
      = link_to edit_group_path(@group) do
        .main__header--group-edit
          edit
    .main__header--members
      member:
      - @groupmembers.each do |person|
        = person.name
      / - は表示しない =は表示する
  .main__body
    .messages
      = render @messages

  .main__footer
    .main__footer--form__message
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main__footer--form__message', placeholder: 'type a message'
      .main__footer--form__icon
        = f.label :image, class: 'main__footer--form__icon' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'input__send'


