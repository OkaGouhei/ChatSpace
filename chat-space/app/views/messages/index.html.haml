= render 'devise/shared/side_bar'
.main
  .main__header
    .main__header--group
      = @group.name
      = link_to edit_group_path(@group) do
        .main__header--group-edit
          edit
    .main__header--members
      member:
      - @groupmembers.each do |person|
        = person.name
      / - は表示しない =は表示する
  .main__body
    .messages
      = render @messages

  .main__footer
    .main__footer--form
    = form_for [@group, @message] do |f|
      .main__footer--form--text
      = f.text_field :content, placeholder: 'type a message'
      .main__footer--form--icon
      = f.label :image, class: 'main__footer--icon' do
        = fa_icon 'picture-o'
        = f.file_field :image
      = f.submit 'Send'

